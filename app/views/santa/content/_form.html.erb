      <%= form_for @content, url: santa_group_content_path(@group, @content), method: :put do |f| %>
        <div class="csw-modal-body">
          <div class="csw-form-group">
            <%= f.label :title, class: "csw-input-label" %>
            <%= f.text_field :title, class: "csw-form-input" %>
          </div>
          <div class="csw-form-group">
            <%= f.label :url, class: "csw-input-label" %>
            <%= f.text_field :url, class: "csw-form-input" %>
          </div>
          <div class="csw-form-group">
            <%= f.label :status, class: "csw-input-label" %>
            <%= f.select :status, Content.statuses.collect { |k,v| [k,k] }, { }, class: "csw-form-input" %>
          </div>
        </div>
        <div class="csw-modal-footer">
          <a href="#" class="csw-button csw-plain-button" data-dismiss="modal" aria-hidden="true">Close</a>
          <%= f.submit "Save", class: "csw-button" %>
        </div>
      <% end %>