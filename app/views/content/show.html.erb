<% title "#{@content.title}" %>

			<div class="csw-content-sub-header csw-content-actions">
        <ul class="csw-content-actions-menu">
          <li>
            <a class="csw-dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="csw-icon csw-icon-share"></i> Export <span class="csw-caret"></span>
            </a>
            <ul class="csw-dropdown-menu" role="menu">
              <li><%= link_to "as HTML", export_group_content_path(@group, @content, ext: "html"), target: "_blank" %></li>
              <li><%= link_to "as Markdown", export_group_content_path(@group, @content, ext: "markdown"), target: "_blank" %></li>
              <li><%= link_to "as plain text", export_group_content_path(@group, @content, ext: "text"), target: "_blank" %></li>
            </ul>
          </li>
          <li>
          	<a class="csw-html-toggle" href="#">
          		<i class="csw-icon csw-icon-code"></i> Show HTML
          	</a>
          </li>
          <li>
            <%= link_to publish_group_content_path(@group, @content), class: "csw-publish-url-button", remote: true do %>
              <i class="csw-icon csw-icon-paperplane"></i> <%= @content.url.blank? ? "Publish your gift" : "Edit the published URL" %>
            <% end %>
          </li>
        </ul>
      </div>
    	<div class="csw-content-plain-preview csw-tab-content">
	      <div class="csw-tab-pane csw-tab-active" id="mde-tab-formatted">
          <div class="mde-preview"><%= raw @content_preview %></div>
        </div>
        <div class="csw-tab-pane" id="mde-tab-html">
          <xmp class="mde-html"><%= raw @content_preview %></xmp>
        </div>
	    </div>