      <div class="csw-content-sub-header csw-content-actions">
        <div class="csw-content-actions-left">
          <ul class="csw-content-actions-menu">
            <% if current_user.writer?(content) %>
              <li>
                <%= link_to upload_group_content_path(group, content), remote: true do %>
                  <i class="csw-icon csw-icon-upload"></i> Import
                <% end %>
              </li>
            <% end %>
            <li>
              <a class="csw-dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="csw-icon csw-icon-share"></i> Export <span class="csw-caret"></span>
              </a>
              <ul class="csw-dropdown-menu" role="menu">
                <li><%= link_to "as HTML", export_group_content_path(group, content, ext: "html"), target: "_blank" %></li>
                <li><%= link_to "as Markdown", export_group_content_path(group, content, ext: "markdown"), target: "_blank" %></li>
                <li><%= link_to "as plain text", export_group_content_path(group, content, ext: "text"), target: "_blank" %></li>
              </ul>
            </li>
            <% if current_user.writer?(content) %>
              <li>
                <%= button_tag type: "submit", class: "csw-button csw-text-button", id: "save-content" do %>
                  <i class="csw-icon csw-icon-save"></i> <span class="csw-save-text">Save</span>
                <% end %>
              </li>
            <% end %>
            <% if @group.gifted? %>
              <li class="csw-pull-right">
                <%= link_to send_gift_group_content_path(@group, @content), class: "csw-font-green",  method: :put do %>
                  <i class="csw-icon csw-icon-paperplane"></i> Send gift
                <% end %>
              </li>
          <% end %>
          </ul>
        </div>

        <div class="csw-content-actions-right">
          <ul class="csw-tabs csw-content-right-tabs">
            <li class="csw-tab-active">
              <%= link_to "#mde-tab-formatted", data: { toggle: "tab" } do %>
                <i class="csw-icon csw-icon-font"></i> Formatted preview
              <% end %>
            </li>
            <li>
              <%= link_to "#mde-tab-html", data: { toggle: "tab" } do %>
                <i class="csw-icon csw-icon-code"></i> HTML preview
              <% end %>
            </li>
            <li>
              <%= link_to "#mde-tab-markdown-reference", data: { toggle: "tab" } do %>
                <i class="csw-icon csw-icon-question-circle"></i> Markdown reference
              <% end %>
            </li>
          </ul>
        </div>
      </div>